<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!--BACKEND后台 Quartz 任务 -->
	<!-- Begin spider manager  log job define 正常应每天执行1-2次，从新闻网站扒新闻 -->
	<bean id="spiderManagerJobDetails" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="spiderManager" />
		</property>
		<property name="targetMethod">
			<value>run</value>
		</property>
	</bean>
	<bean id="spiderManagerJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="spiderManagerJobDetails" />
		</property>
		<property name="cronExpression">
			<!-- <value>35 */2 * * * ?</value> -->
			<value>35 32 11 * * ?</value>
		</property>
	</bean>


	<bean id="bossJobDefine" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="spiderManagerJobTrigger" />
			</list>
		</property>
	</bean>

</beans>
